%header.header
  .dates
    .date-top
      .month
        = article.date.strftime('%b')
      .day
        = article.date.strftime('%d')
    .date-bottom
      .year
        = article.date.strftime('%Y')
  .data
    %h2.article-title
      = link_to article.title, article, :id =>'#disqus_thread'
    - if is_blog_article?
      .author
        = "by #{article.data.author}"
