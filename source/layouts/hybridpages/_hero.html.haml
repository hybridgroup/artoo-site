- if current_page.data.hero
  .hero
    .container
      .content
        %h1.title
          = current_page.data.hero_title

        %p.sub-title
          = current_page.data.hero_subtitle

        %a{ href:'/documentation/getting-started', class:'action'} Get Started

      .display
        %img{src: "/images/elements/artoo.png"}/

      .animations
        .ship-small
        .ship-medium
        .ship-large
        .planet
        .moon

      .social
        = yield_content :social_links 

  .description
    .container
      %h2 Gobot is a framework for robotics, physical computing, and the Internet of Things, written in <span>the Go programming language</span>