        :::ruby
        require 'artoo/robot'

        class HelloRobot < Artoo::Robot
        	connection :loop
          
        	work do
        	  every(3.seconds) do
        	     puts "hello"
        	  end
        	  after(10.seconds) do
        	  	puts "wow"
        	  end
        	end
        end

        HelloRobot.work!
